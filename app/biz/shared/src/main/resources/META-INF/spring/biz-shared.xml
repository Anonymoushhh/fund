<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:sofa="http://sofastack.io/schema/sofaboot"
       xmlns:context="http://www.springframework.org/schema/context"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd
            http://sofastack.io/schema/sofaboot http://sofastack.io/schema/sofaboot.xsd"
       default-autowire="byName">
    <sofa:service ref="dataCrawlingTask" interface="com.sdu.fund.biz.shared.Task.DataCrawlingTask">
        <sofa:binding.jvm/>
    </sofa:service>

    <!--    微信页面专属查询类-->
    <bean class="com.sdu.fund.biz.shared.query.serviceImpl.wxpages.FundDetailPageServiceImpl" id="fundDetailPageService"/>
    <sofa:service ref="fundDetailPageService" interface="com.sdu.fund.biz.shared.query.service.wxpages.FundDetailPageService">
        <sofa:binding.jvm/>
    </sofa:service>

    <!--    通用查询类-->
    <bean class="com.sdu.fund.biz.shared.query.serviceImpl.FundCommonQueryServiceImpl" id="fundCommonQueryService"/>
    <sofa:service ref="fundCommonQueryService" interface="com.sdu.fund.biz.shared.query.service.FundCommonQueryService">
        <sofa:binding.jvm/>
    </sofa:service>

    <bean class="com.sdu.fund.biz.shared.query.serviceImpl.FundDataQueryServiceImpl" id="fundDataQueryService"/>
    <sofa:service ref="fundDataQueryService" interface="com.sdu.fund.biz.shared.query.service.FundDataQueryService">
        <sofa:binding.jvm/>
    </sofa:service>

    <bean class="com.sdu.fund.biz.shared.query.serviceImpl.FundArchiveQueryServiceImpl" id="fundArchiveQueryService"/>
    <sofa:service ref="fundArchiveQueryService"
                  interface="com.sdu.fund.biz.shared.query.service.FundArchiveQueryService">
        <sofa:binding.jvm/>
    </sofa:service>

    <bean class="com.sdu.fund.biz.shared.query.serviceImpl.FundCompanyQueryServiceImpl" id="fundCompanyQueryService"/>
    <sofa:service ref="fundCompanyQueryService"
                  interface="com.sdu.fund.biz.shared.query.service.FundCompanyQueryService">
        <sofa:binding.jvm/>
    </sofa:service>

    <bean class="com.sdu.fund.biz.shared.query.serviceImpl.FundManagerQueryServiceImpl" id="fundManagerQueryService"/>
    <sofa:service ref="fundManagerQueryService"
                  interface="com.sdu.fund.biz.shared.query.service.FundManagerQueryService">
        <sofa:binding.jvm/>
    </sofa:service>
</beans>
